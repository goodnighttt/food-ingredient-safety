.container {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .header {
    text-align: center;
    margin-bottom: 60rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 20rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
    color: #666;
    display: block;
  }
  
  .upload-area {
    width: 600rpx;
    height: 600rpx;
    background: #f8f8f8;
    border: 2rpx dashed #ddd;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .upload-icon {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 30rpx;
  }
  
  .upload-text {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .upload-desc {
    font-size: 24rpx;
    color: #999;
  }
  
  .preview-image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
  }
  
  .button-area {
    width: 600rpx;
    margin-top: 40rpx;
  }
  
  .analyze-btn {
    margin-bottom: 20rpx;
  }
  
  .reupload-btn {
    background: #f8f8f8;
    color: #666;
  }